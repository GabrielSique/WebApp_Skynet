<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registrar</title>
</head>
<body>
    <div>
        <h1>Registrar Usuario</h1>
        <hr />
        <form action="@Url.Action("RegisterUser","Home")" method="post" name="registroForm">
            <div class="input-group mb-2">
                <select class="caja" name="idRol" required id="selectRol">
                    <option disabled selected value="">Selecciona tipo de usuario</option>
                    <option value="1">Administrador</option>
                    <option value="2">Supervisor</option>
                    <option value="3">Tecnico</option>
                </select>
            </div>
            <div class="input-group mb-2">
                <input type="text" name="email" required class="form-control input_user" value="" placeholder="Correo">
            </div>

            <div class="input-group mb-2">
                <input type="text" name="firstName" required class="form-control input_user" value="" placeholder="Nombre">
            </div>
            <br />
            <div class="input-group mb-2">
                <input type="text" name="surName" required class="form-control input_user" value="" placeholder="Primer Apellido">
            </div>
            <br />
            <div class="input-group mb-2">
                <input type="text" name="secondSurName" required class="form-control input_user" value="" placeholder="Segundo Apellido">
            </div>
            <br />
            <div class="input-group mb-2">
                <input type="text" name="direction" required class="form-control input_user" value="" placeholder="Direccion">
            </div>
            <br />
            <div class="input-group mb-2">
                <input type="text" name="phoneNumber" required class="form-control input_user" value="" placeholder="Numero celular">
            </div>
            <br />
            <div class="input-group mb-2">
                <input type="text" name="dni" required class="form-control input_user" value="" placeholder="Identificacion">
            </div>
            <br />
            <div class="input-group mb-2">
                <input type="text" name="businessName" required class="form-control input_user" value="" placeholder="Nombre empresa">
            </div>
            <br />
            <div class="input-group mb-2">
                <input type="text" name="nit" required class="form-control input_user" value="" placeholder="Nit" />
            </div>
            <br />
            <div class="input-group mb-2">
                <input type="password" name="passwordUser" required class="form-control input_user" value="" placeholder="Contraseña">
            </div>
            <br />
            <div class="d-flex justify-content-center mt-3 login_container">
                <button type="button" name="button" class="btn login_btn" style="width: 200px;" onclick="validarFormulario()">Registrar</button>
            </div>
            <script>
                function validarFormulario() {
                    var selectElement = document.getElementById("selectRol");
                    if (selectElement.value === "") {
                        alert("Por favor, selecciona un tipo de usuario");
                        return; // Evita continuar con el envío del formulario si la validación no se cumple
                    } else {
                        // Si se cumple la validación, puedes enviar el formulario
                        document.forms["registroForm"].submit();
                    }
                }
            </script>
        </form>
    </div>
</body>
</html>
