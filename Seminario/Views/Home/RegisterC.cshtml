<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Registrar</title>
    </head>
    <body>
        <div>
            <h1>Registrar Cliente</h1>
            <hr />
            <form action="@Url.Action("RegisterClient","Home")" method="post">
                <div class="input-group mb-2">
                    <input type="text" name="email" required class="form-control input_user" value="" placeholder="Correo">
                </div>
                <br />
                <div class="input-group mb-2">
                    <input type="text" name="firstName" required class="form-control input_user" value="" placeholder="Nombre">
                </div>
                <br />
                <div class="input-group mb-2">
                    <input type="text" name="surName" required class="form-control input_user" value="" placeholder="Primer Apellido">
                </div>
                <br />
                <div class="input-group mb-2">
                    <input type="text" name="secondSurName" required class="form-control input_user" value="" placeholder="Segundo Apellido">
                </div>
                <br />
                <div class="input-group mb-2">
                    <input type="text" name="direction" required class="form-control input_user" value="" placeholder="Direccion">
                </div>
                <br />
                <div class="input-group mb-2">
                    <input type="text" name="phoneNumber" required class="form-control input_user" value="" placeholder="Numero celular">
                </div>
                <br />
                <div class="input-group mb-2">
                    <input type="text" name="dni" required class="form-control input_user" value="" placeholder="Identificacion">
                </div>
                <br />
                <div class="input-group mb-2">
                    <input type="text" name="businessName" class="form-control input_user" value="" placeholder="Nombre empresa">
                </div>
                <br />
                <div class="input-group mb-2">
                    <input type="text" name="nit" required class="form-control input_user" value="" placeholder="Nit" />
                </div>
                <br />
                <div class="d-flex justify-content-center mt-3 login_container">
                    <button type="submit" name="button" class="btn login_btn" style="width: 200px;">Registrar</button>
                </div>
            </form>
        </div>
    </body>
</html>
